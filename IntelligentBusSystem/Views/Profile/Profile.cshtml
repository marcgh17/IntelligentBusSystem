@model IntelligentBusSystem.Models.SUser
@{
    ViewBag.Title = "Profile";
}

<div class="resume">
    <header class="page-header">
        <h2 class="page-title"><span class="label label-info">@Model.SUserFirstName @Model.SUserLastName's profile</span></h2>
    </header>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-offset-1 col-md-10 col-lg-offset-2 col-lg-8">
            <div class="panel panel-default">
                <div class="panel-heading resume-heading">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-xs-12 col-sm-4">
                                <figure>
                                    <img src="@Model.SUserPhoto" alt="@Model.SUserID" class="img-thumbnail img-circle" style=" width:250px;height:250px">
                                </figure>
                            </div>

                            <div class="col-xs-12 col-sm-8">
                                <ul class="list-group">
                                    <li class="list-group-item">
                                        <label class="uMyLabel">User name: </label><label class="mylabel">@Model.SUserID</label>
                                    </li>
                                    <li class="list-group-item"><label class="uMyLabel">First name: </label><label class="mylabel">@Model.SUserFirstName</label></li>
                                    <li class="list-group-item">
                                        <label class="uMyLabel">Last name: </label><label class="mylabel">@Model.SUserLastName</label>
                                    </li>
                                    <li class="list-group-item">
                                        <label class="uMyLabel">User role: </label><label class="mylabel">
                                            @{
                                                var role = (@Model.SUserRole == "A") ? "Admin" : "User";
                                            } @role
                                        </label>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

