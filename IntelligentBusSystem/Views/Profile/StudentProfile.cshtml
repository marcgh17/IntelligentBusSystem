@model Tuple<IntelligentBusSystem.Models.Student, IntelligentBusSystem.Models.Class>
@{
    ViewBag.Title = "StudentProfile";
}

<div class="resume">
    <header class="page-header">
        <h2 class="page-title"><span class="label label-info">@Model.Item1.StudentFirstName @Model.Item1.StudentLastName's profile</span></h2>
        <h3 class="page-title"><span class="label label-warning">@Model.Item2.ClassName Student</span></h3>
    </header>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-offset-1 col-md-10 col-lg-offset-2 col-lg-8">
            <div class="panel panel-default">
                <div class="panel-heading resume-heading">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-xs-12 col-sm-4">
                                <figure>
                                    <img src="@Model.Item1.StudentThumbPhoto" alt="@Model.Item1.StudentID" class="img-thumbnail img-circle" style=" width:250px;height:250px">
                                </figure>
                            </div>

                            <div class="col-xs-12 col-sm-8">

                                <ul class="list-group">
                                    <li class="list-group-item">
                                        <label class="uMyLabel">User name: </label><label class="mylabel">@Model.Item1.StudentID</label>
                                    </li>
                                    <li class="list-group-item"><label class="uMyLabel">First name: </label><label class="mylabel">@Model.Item1.StudentFirstName</label></li>
                                    <li class="list-group-item">
                                        <label class="uMyLabel">Last name: </label><label class="mylabel">@Model.Item1.StudentLastName</label>
                                    </li>
                                    <li class="list-group-item">
                                        <label class="uMyLabel">Gender: </label><label class="mylabel">
                                            @{
                                                var role = (@Model.Item1.StudentGender == "M") ? "Male" : "Female";
                                            } @role
                                        </label>
                                    </li>
                                    <li class="list-group-item">
                                        <label class="uMyLabel">Date of birth: </label><label class="mylabel">@Model.Item1.StudentBirthdate</label>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
@Html.Action("DisplaySchedule")